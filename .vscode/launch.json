{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/app.js", // replace with your entry point file
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "PORT": "4001"
            }
        }
    ]
}